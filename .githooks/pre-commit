#!/bin/sh
echo "Running Checkstyle..."

mvn checkstyle:check
CHECKSTYLE_STATUS=$?


if [ $CHECKSTYLE_STATUS -ne 0 ]; then
    echo "‚ùå Checkstyle failed! Fix your errors before committing buddy!"
    exit 1 
fi

echo "‚úÖ Linter checks passed! Proceeding with running tests..."

echo "Running Tests..."

mvn test
TEST_STATUS=$?

if [ $TEST_STATUS -ne 0 ]; then
    echo "‚ùå Tests failed! Fix your errors before committing buddy!"
    exit 1 
fi

echo "üöÄ Tests passed! Proceeding with commit..."

exit 0